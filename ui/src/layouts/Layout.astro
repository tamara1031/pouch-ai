---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="pouch">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Pouch AI - Clean API Key Management" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <style>
      :root {
        --bg-color: #050508;
        --card-bg: rgba(255, 255, 255, 0.03);
        --card-border: rgba(255, 255, 255, 0.06);
      }
      * {
        font-family: "Outfit", system-ui, sans-serif;
      }
      code,
      pre,
      .font-mono {
        font-family: "JetBrains Mono", "Fira Code", monospace !important;
      }
      body {
        background-color: var(--bg-color);
        background-image:
          radial-gradient(
            circle at 50% 0%,
            rgba(124, 58, 237, 0.05) 0%,
            transparent 50%
          ),
          radial-gradient(
            circle at 0% 100%,
            rgba(139, 92, 246, 0.02) 0%,
            transparent 40%
          );
        background-attachment: fixed;
      }
    </style>
  </head>
  <body
    class="min-h-screen text-base-content antialiased selection:bg-primary/30 selection:text-white"
  >
    <!-- Simple Subtle Background Elements -->
    <div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
      <div
        class="absolute top-0 left-1/4 w-[500px] h-[500px] bg-primary/5 rounded-full blur-[120px]"
      >
      </div>
    </div>

    <!-- Minimal Navigation -->
    <nav
      class="sticky top-0 z-50 backdrop-blur-xl bg-black/20 border-b border-white-[0.05]"
    >
      <div
        class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between"
      >
        <a href="/" class="flex items-center gap-3 group">
          <div
            class="w-10 h-10 rounded-xl bg-gradient-to-tr from-primary to-primary/60 flex items-center justify-center shadow-2xl shadow-primary/20 transition-transform group-hover:scale-105"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
              ></path>
            </svg>
          </div>
          <span class="text-xl font-bold tracking-tight text-white">
            Pouch<span class="text-primary/80 ml-0.5">AI</span>
          </span>
        </a>

        <div class="flex items-center gap-6">
          <a
            href="https://github.com/yamato/pouch-ai"
            target="_blank"
            class="text-xs font-semibold uppercase tracking-widest text-white/40 hover:text-white transition-colors"
          >
            Documentation
          </a>
          <a
            href="https://github.com/yamato/pouch-ai"
            target="_blank"
            class="p-2 rounded-lg bg-white/5 hover:bg-white/10 transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 text-white/60"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <!-- Minimal Footer -->
    <footer class="mt-32 pb-16 px-6">
      <div
        class="max-w-7xl mx-auto pt-12 border-t border-white-[0.05] flex flex-col md:flex-row items-center justify-between gap-6"
      >
        <p class="text-xs font-medium text-white/20 uppercase tracking-[0.2em]">
          © 2026 Pouch AI — Secure LLM Infrastructure
        </p>
        <div
          class="flex items-center gap-4 grayscale opacity-20 hover:grayscale-0 hover:opacity-100 transition-all"
        >
          <span
            class="text-[10px] font-bold uppercase tracking-widest text-white/40"
            >Powered by</span
          >
          <div class="h-4 w-px bg-white/20"></div>
          <span class="text-xs font-black text-white"
            >Vite / Astro / Preact</span
          >
        </div>
      </div>
    </footer>
  </body>
</html>
