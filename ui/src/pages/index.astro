---
import Layout from "../layouts/Layout.astro";
import Dashboard from "../components/Dashboard";
import Modals from "../components/Modals";
---

<Layout title="API Keys â€” Pouch AI">
    <div class="max-w-5xl mx-auto py-24 px-6">
        {/* Header - Minimal & Modern */}
        <div
            class="flex flex-col md:flex-row md:items-end justify-between gap-12 mb-20 animate-in fade-in slide-in-from-bottom-6 duration-1000"
        >
            <div class="space-y-4">
                <h1 class="text-6xl font-black text-white tracking-tight">
                    API Keys
                </h1>
                <p
                    class="text-white/30 font-medium text-lg max-w-sm leading-relaxed"
                >
                    Securely manage and monitor your application's access to
                    external LLM providers.
                </p>
            </div>

            <label
                for="create-key-modal"
                class="btn btn-primary h-16 px-10 rounded-2xl border-none shadow-2xl shadow-primary/20 gap-4 group hover:scale-[1.02] active:scale-95 transition-all"
            >
                <div
                    class="p-1 rounded-lg bg-white/20 group-hover:rotate-90 transition-transform duration-500"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4 text-white"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2.5"
                            d="M12 4v16m8-8H4"></path>
                    </svg>
                </div>
                <span class="font-bold uppercase tracking-[0.2em] text-[10px]"
                    >Generate API Key</span
                >
            </label>
        </div>

        {/* Dynamic Dashboard - Client Island */}
        <Dashboard client:load />
    </div>

    {/* Modals - Client Island */}
    <Modals client:load />
</Layout>
